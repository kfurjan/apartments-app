{
    "python.pythonPath": "${workspaceRoot}/backend/env/bin/python",
    "python.envFile": "${workspaceRoot}/backend/.env",
    "python.analysis.extraPaths": ["./backend"],
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.formatOnSave": true,
    },
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=127",
    ],
    "python.analysis.completeFunctionParens": true,

    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true
    },
    
    "cSpell.words": [
        "Apartmani",
        "Karlo",
        "OICAR",
        "UNPROCESSABLE",
        "aiosql",
        "apartmens",
        "asyncio",
        "asyncpg",
        "authjwt",
        "bcrypt",
        "dotenv",
        "dpage",
        "entrypoint",
        "fastapi",
        "httpx",
        "initdb",
        "onupdate",
        "passlib",
        "pgadmin",
        "postgres",
        "postgresql",
        "psycopg",
        "pydantic",
        "pypika",
        "pytest",
        "pytestmark",
        "starlette",
        "uvicorn",
        "venv"
    ],
}
